<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="Site.master.cs" Inherits="Neeit.Frontend.Site" %>

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title></title>
    <asp:ContentPlaceHolder ID="head" runat="server">
    </asp:ContentPlaceHolder>
</head>
<body>
    <form id="form1" runat="server">
        <div>
            <table width="100%" >
                <colgroup>
                    <col width="15%" />
                    <col width="100%"/>
                    <col width="65%" />
                </colgroup>
                <tr>
                    <td colspan="2">
                        <h1>cabeçalho</h1>
                        <br />
                    </td>
                    <td class="auto-style1">
                        <asp:Login ID="Login1" runat="server"></asp:Login>
                    </td>
                </tr>
                <tr>
                    <td colspan="3">
                        <asp:Menu ID="Menu1" runat="server" DataSourceID="XmlDS_menu" Orientation="Horizontal" RenderingMode="List">
                            <DataBindings>
                                <asp:MenuItemBinding DataMember="pasta" NavigateUrlField="link" TextField="msgParaEcra" />
                                <asp:MenuItemBinding DataMember="ligacao" ImageUrlField="ImgURL" NavigateUrlField="url" TextField="textoParaEcra" ToolTipField="Descricao" />
                            </DataBindings>
                        </asp:Menu>
                        <asp:XmlDataSource ID="XmlDS_menu" runat="server" DataFile="~/Menu/Menu.xml" XPath="/menu/*"></asp:XmlDataSource>
                        <br />
                    </td>
                </tr>
                <tr>
                    <td  colspan="2"><em>conteúdo</em><br />
                        <asp:ContentPlaceHolder ID="ContentPlaceHolder1" runat="server">
                        </asp:ContentPlaceHolder>
                    </td>
                    <td class="auto-style1"><em>publicidade</em></td>
                </tr>
                <tr>
                    <td colspan="3"><h1>footer</h1></td>
                </tr>
            </table>
        </div>
    </form>
</body>
</html>
